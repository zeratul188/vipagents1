<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    android:orientation="vertical"
    tools:context=".ui.slideshow.PokerActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtDemage"
            android:text="null"
            android:textSize="30sp"
            android:textColor="#000000"
            android:gravity="left"
            android:layout_gravity="top|left"
            android:textStyle="bold"/>
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="전투력"
            android:textSize="15sp"
            android:layout_marginLeft="5dp"
            android:textColor="#666666"/>
        <Button
            android:id="@+id/btnAdd"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/mainbuttonsuctom"
            android:layout_gravity="start"
            android:text="+1"
            android:textSize="20sp"
            android:visibility="gone"
            android:textColor="#FFFFFF"/>

        <LinearLayout
            android:layout_width="140dp"
            android:layout_height="50dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/contentcustom"
            android:orientation="horizontal">

            <View
                android:layout_width="7dp"
                android:layout_height="match_parent"
                android:background="@drawable/contentviewcustom" />

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:layout_marginLeft="5dp"
                android:src="@drawable/ic_sim_card_black_24dp" />

            <TextView
                android:id="@+id/txtTicket"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_gravity="center"
                android:text="null"
                android:textColor="#000000"
                android:textSize="25sp"
                android:textAlignment="textEnd"
                android:layout_marginRight="15dp"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="20dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:text="Lv."
            android:textSize="15sp"
            android:textColor="#000000"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtLevel"
            android:text="0"
            android:textSize="25sp"
            android:textColor="#000000"
            android:textStyle="bold"
            android:layout_gravity="bottom"/>
        <ProgressBar
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="10dp"
            style="?android:attr/progressBarStyleHorizontal"
            android:progressDrawable="@drawable/progressbar_progressbar_gage"
            android:background="@drawable/gage2"
            android:id="@+id/progressLevel"
            android:paddingTop="5dp"
            android:progress="50"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="7dp"
            android:layout_gravity="bottom"
            android:indeterminateTint="#E45435"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtLevelValue"
            android:text="(150/200)"
            android:layout_marginLeft="10dp"
            android:layout_gravity="bottom"
            android:textSize="15sp"
            android:textColor="#444444"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txtCard1"
            android:layout_width="60dp"
            android:layout_height="90dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/nulltype"
            android:gravity="center"
            android:text="-"
            android:textColor="#000000"
            android:textSize="30sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="60dp"
            android:layout_height="90dp"
            android:id="@+id/txtCard2"
            android:background="@drawable/nulltype"
            android:text="-"
            android:textColor="#000000"
            android:textSize="30sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginRight="10dp"/>
        <TextView
            android:layout_width="60dp"
            android:layout_height="90dp"
            android:id="@+id/txtCard3"
            android:background="@drawable/nulltype"
            android:text="-"
            android:textColor="#000000"
            android:textSize="30sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginRight="10dp"/>
        <TextView
            android:layout_width="60dp"
            android:layout_height="90dp"
            android:id="@+id/txtCard4"
            android:background="@drawable/nulltype"
            android:text="-"
            android:textColor="#000000"
            android:textSize="30sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginRight="10dp"/>
        <TextView
            android:layout_width="60dp"
            android:layout_height="90dp"
            android:id="@+id/txtCard5"
            android:background="@drawable/nulltype"
            android:text="-"
            android:textColor="#000000"
            android:textSize="30sp"
            android:gravity="center"
            android:textStyle="bold"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:id="@+id/imgChange1"
            android:src="@drawable/ic_autorenew_black_24dp"
            android:padding="5dp"
            android:visibility="invisible"
            android:background="@drawable/buttonsubcustom"
            android:layout_marginRight="10dp"/>
        <ImageView
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:id="@+id/imgChange2"
            android:src="@drawable/ic_autorenew_black_24dp"
            android:padding="5dp"
            android:visibility="invisible"
            android:background="@drawable/buttonsubcustom"
            android:layout_marginRight="10dp"/>
        <ImageView
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:id="@+id/imgChange3"
            android:src="@drawable/ic_autorenew_black_24dp"
            android:padding="5dp"
            android:visibility="invisible"
            android:background="@drawable/buttonsubcustom"
            android:layout_marginRight="10dp"/>
        <ImageView
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:id="@+id/imgChange4"
            android:src="@drawable/ic_autorenew_black_24dp"
            android:padding="5dp"
            android:visibility="invisible"
            android:background="@drawable/buttonsubcustom"
            android:layout_marginRight="10dp"/>
        <ImageView
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:id="@+id/imgChange5"
            android:src="@drawable/ic_autorenew_black_24dp"
            android:padding="5dp"
            android:visibility="invisible"
            android:background="@drawable/buttonsubcustom"/>
    </LinearLayout>
    <Button
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        style="?android:attr/borderlessButtonStyle"
        android:id="@+id/btnOK"
        android:background="@drawable/buttonmaincustom"
        android:layout_marginTop="30dp"
        android:text="티켓 사용하기"
        android:textSize="17sp"
        android:textColor="#FFFFFF"
        android:textStyle="bold"/>
    <Button
        android:layout_width="100dp"
        android:layout_height="40dp"
        style="?android:attr/borderlessButtonStyle"
        android:id="@+id/btnReset"
        android:background="@drawable/buttonsubcustom"
        android:text="초기화"
        android:textSize="15sp"
        android:textColor="#000000"
        android:layout_marginTop="15dp"
        android:layout_gravity="center"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="최근 기록"
            android:textSize="15sp"
            android:textColor="#222222"
            android:paddingLeft="10dp"
            android:layout_marginRight="3dp"/>
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="포커 갯수"
            android:textSize="15sp"
            android:textColor="#222222"
            android:paddingLeft="10dp"
            android:layout_marginLeft="3dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">
        <ListView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:id="@+id/listView"
            android:background="@drawable/contentcustom"
            android:divider="#10000000"
            android:dividerHeight="1dp"
            android:paddingBottom="10dp"
            android:paddingRight="5dp"
            android:layout_marginRight="3dp"
            android:listSelector="#00000000"/>
        <ListView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:id="@+id/listType"
            android:background="@drawable/contentcustom"
            android:divider="#00000000"
            android:dividerHeight="2dp"
            android:paddingBottom="10dp"
            android:paddingRight="5dp"
            android:layout_marginLeft="3dp"
            android:listSelector="#00000000"/>
    </LinearLayout>
</LinearLayout>