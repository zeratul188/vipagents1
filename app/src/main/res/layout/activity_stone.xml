            android:layout_height="30dp"
            android:id="@+id/imgSecond9"
            android:src="@drawable/none_crystal"
            android:layout_margin="5dp"/>
        <ImageView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="30dp"
            android:id="@+id/imgSecond10"
            android:src="@drawable/none_crystal"
            android:layout_margin="5dp"/>
    </LinearLayout>
    <Button
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_gravity="right"
        style="?android:attr/borderlessButtonStyle"
        android:id="@+id/btnSecondUpgrade"
        android:background="@drawable/buttonsubcustom"
        android:layout_marginTop="10dp"
        android:text="강화"
        android:textSize="17sp"
        android:textColor="#000000"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="패널티 속성"
        android:textSize="25sp"
        android:textColor="#222222"
        android:layout_marginTop="20dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="5dp">
        <ImageView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="30dp"
            android:id="@+id/imgDeburf1"
            android:src="@drawable/none_crystal"
            android:layout_margin="5dp"/>
        <ImageView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="30dp"
            android:id="@+id/imgDeburf2"
            android:src="@drawable/none_crystal"
            android:layout_margin="5dp"/>
        <ImageView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="30dp"
            android:id="@+id/imgDeburf3"
            android:src="@drawable/none_crystal"
            android:layout_margin="5dp"/>
        <ImageView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="30dp"
            android:id="@+id/imgDeburf4"
            android:src="@drawable/none_crystal"
            android:layout_margin="5dp"/>
        <ImageView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="30dp"
            android:id="@+id/imgDeburf5"
            android:src="@drawable/none_crystal"
            android:layout_margin="5dp"/>
        <ImageView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="30dp"
            android:id="@+id/imgDeburf6"
            android:src="@drawable/none_crystal"
            android:layout_margin="5dp"/>
        <ImageView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="30dp"
            android:id="@+id/imgDeburf7"
            android:src="@drawable/none_crystal"
            android:layout_margin="5dp"/>
        <ImageView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="30dp"
            android:id="@+id/imgDeburf8"
            android:src="@drawable/none_crystal"
            android:layout_margin="5dp"/>
        <ImageView
            android:layout_width="0dp"
            android:layout_weight="1"
