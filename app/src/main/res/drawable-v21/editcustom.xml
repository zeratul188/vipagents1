<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_focused="true">
        <shape>
            <padding android:bottom="4dp" android:left="8dp" android:right="8dp" android:top="4dp" />
            <solid android:color="#00fe6e0e"/>
            <corners android:radius="5dp"/>
            <stroke
                android:width="1dp"
                android:color="#fe6e0e"/>
        </shape>
    </item>
    <item android:state_enabled="false">
        <shape>
            <padding android:bottom="4dp" android:left="8dp" android:right="8dp" android:top="4dp" />
            <solid android:color="#30FF9999" />
            <corners android:radius="5dp"/>
            <stroke
                android:width="1dp"
                android:color="#FF9999"/>
        </shape>
    </item>
    <item android:state_focused="false">
        <shape>
            <padding android:bottom="4dp" android:left="8dp" android:right="8dp" android:top="4dp" />
            <solid android:color="#00888888" />
            <corners android:radius="5dp"/>
            <stroke
                android:width="1dp"
                android:color="#80888888"/>
        </shape>
    </item>

</selector>