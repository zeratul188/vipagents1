            android:id="@+id/imgDeburf10"
            android:src="@drawable/none_crystal"
            android:layout_margin="5dp"/>
    </LinearLayout>
    <Button
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_gravity="right"
        style="?android:attr/borderlessButtonStyle"
        android:id="@+id/btnDeburfUpgrade"
        android:background="@drawable/buttonsubcustom"
        android:layout_marginTop="10dp"
        android:text="강화"
        android:textSize="17sp"
        android:textColor="#000000"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtWarning"
        android:text="주 속성, 패널티 속성을 모두 강화해야 결정하실 수 있습니다."
        android:textColor="#AA0000"
        android:layout_gravity="center"
        android:textSize="14sp"
        android:layout_marginTop="40dp"/>
    <Button
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        style="?android:attr/borderlessButtonStyle"
        android:id="@+id/btnOK"
        android:background="@drawable/buttonmaincustom"
        android:layout_marginTop="10dp"
        android:text="결정하기"
        android:enabled="false"
        android:textSize="17sp"
        android:textColor="#FFFFFF"
        android:textStyle="bold"/>
</LinearLayout>