<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp"
    tools:context=".ui.tools.WrtieEventActivity">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="제목"
        android:textSize="15sp"
        android:textColor="#444444"
        android:layout_marginBottom="5dp"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:id="@+id/edtTitle"
        android:background="@drawable/editcustom"
        android:hint="이벤트 제목"
        android:textSize="15sp"
        android:textColor="#000000"
        android:layout_marginBottom="10dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="5dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="이벤트 사진"
            android:textSize="15sp"
            android:textColor="#444444"
            android:layout_marginRight="10dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="(jpg 사진만 허용됩니다.)"
            android:textSize="15sp"
            android:textColor="#FF6666"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="10dp">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:id="@+id/txtImage"
            android:text="이미지를 올려주십시오."
            android:textSize="15sp"
            android:textColor="#000000"/>
        <Button
            android:layout_width="80dp"
            android:layout_height="30dp"
            android:background="@drawable/buttonsubcustom"
            style="?android:attr/borderlessButtonStyle"
            android:id="@+id/btnImage"
            android:text="업로드"
            android:textSize="15sp"
            android:textColor="#000000"
            android:layout_marginLeft="10dp"/>
    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="이벤트 기간"
        android:textSize="15sp"
        android:textColor="#444444"
        android:layout_marginBottom="5dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="10dp">
        <Button
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="30dp"
            android:id="@+id/btnStart"
            android:text="2021년 12월 31일"
            android:background="@drawable/buttonsubcustom"
            style="?android:attr/borderlessButtonStyle"
            android:textSize="15sp"
            android:textColor="#000000"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="~"
            android:textSize="15sp"
            android:textColor="#000000"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"/>
        <Button
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="30dp"
            android:id="@+id/btnEnd"
            android:text="2022년 1월 7일"
            android:background="@drawable/buttonsubcustom"
            style="?android:attr/borderlessButtonStyle"
            android:textSize="15sp"
            android:textColor="#000000"/>
    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="제한 인원"
        android:textSize="15sp"
        android:textColor="#000000"
        android:layout_marginBottom="5dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="10dp">
        <EditText
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="35dp"
            android:background="@drawable/editcustom"
            android:id="@+id/edtLimit"
            android:hint="제한 인원 수 (명)"
            android:textSize="15sp"
            android:textColor="#000000"
            android:maxLength="4"
            android:inputType="numberDecimal" />
        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/chkInfinity"
            android:buttonTint="#FE6E0E"
            android:text="제한 없음"
            android:layout_marginLeft="10dp"
            android:textSize="15sp"
            android:textColor="#000000"/>
    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="내용"
        android:textSize="15sp"
        android:textColor="#000000"
        android:layout_marginBottom="5dp"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:id="@+id/edtContent"
        android:background="@drawable/editcustom"
        android:hint="이벤트 내용"
        android:gravity="top"
        android:textSize="14sp"
        android:textColor="#000000"/>
</LinearLayout>